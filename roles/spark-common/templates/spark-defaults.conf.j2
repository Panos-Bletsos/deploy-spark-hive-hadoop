# Default system properties included when running spark-submit.
# This is useful for setting default environmental settings.

spark.driver.memory = {{ spark_driver_memory }}
spark.executor.memory = {{ spark_executor_memory }}
spark.executor.cores = {{ spark_executor_cores }}
spark.eventLog.enabled = true
spark.logLineage = true
spark.eventLog.dir = hdfs://{{ groups['hadoop_namenode'][0] }}:{{ hadoop_hdfs_port }}{{ spark_log_dir }}
spark.history.fs.logDirectory = hdfs://{{ groups['hadoop_namenode'][0] }}:{{ hadoop_hdfs_port }}{{ spark_log_dir }}
spark.sql.autoBroadcastJoinThreshold = {{ spark_auto_broadcast_join_threshold }}
spark.sql.crossJoin.enabled = true
spark.sql.cbo.joinReorder.enabled = true
spark.sql.cbo.enabled = true
spark.sql.physicalCbo = {{ spark_physicalCbo_enabled }}
spark.sql.physicalCbo.maxDepth = {{ spark_physicalCbo_maxDepth }}
spark.sql.physicalCbo.hashing.weight = {{ spark_physicalCbo_hashing_weight }}
spark.sql.physicalCbo.cpu.weight = {{ spark_physicalCbo_cpu_weight }}
spark.sql.physicalCbo.io.write.weight = {{ spark_physicalCbo_io_write_weight }}
spark.sql.physicalCbo.io.read.weight = {{ spark_physicalCbo_io_read_weight }}
spark.sql.physicalCbo.net.weight = {{ spark_physicalCbo_net_weight }}
